<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/previewText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/inputText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/inputText"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:autoSizeMaxTextSize="50sp"
        android:autoSizeTextType="uniform"
        android:gravity="bottom|end"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/default_input"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/Controls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/Controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexDirection="column"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.flexbox.FlexboxLayout
            style="@style/AppTheme.Row">

            <Button
                style="@style/AppTheme.ActionBtn"
                android:id="@+id/clear_all"
                android:text="AC" />

            <Button
                style="@style/AppTheme.ActionBtn"
                android:tag="@string/type_bracket"
                android:text="(" />

            <Button
                style="@style/AppTheme.ActionBtn"
                android:tag="@string/type_bracket"
                android:text=")" />

            <Button
                style="@style/AppTheme.ActionBtn"
                android:tag="@string/type_operator"
                android:text="/" />

        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            style="@style/AppTheme.Row">

            <Button
                style="@style/AppTheme.NumBtn"
                android:tag="@string/type_number"
                android:text="7" />

            <Button
                style="@style/AppTheme.NumBtn"
                android:tag="@string/type_number"
                android:text="8" />

            <Button
                style="@style/AppTheme.NumBtn"
                android:tag="@string/type_number"
                android:text="9" />

            <Button
                style="@style/AppTheme.ActionBtn"
                android:tag="@string/type_operator"
                android:text="*" />

        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            style="@style/AppTheme.Row">

            <Button
                style="@style/AppTheme.NumBtn"
                android:tag="@string/type_number"
                android:text="4" />

            <Button
                style="@style/AppTheme.NumBtn"
                android:tag="@string/type_number"
                android:text="5" />

            <Button
                style="@style/AppTheme.NumBtn"
                android:tag="@string/type_number"
                android:text="6" />

            <Button
                style="@style/AppTheme.ActionBtn"
                android:tag="@string/type_operator"
                android:text="-" />

        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            style="@style/AppTheme.Row">

            <Button
                style="@style/AppTheme.NumBtn"
                android:tag="@string/type_number"
                android:text="1" />

            <Button
                style="@style/AppTheme.NumBtn"
                android:tag="@string/type_number"
                android:text="2" />

            <Button
                style="@style/AppTheme.NumBtn"
                android:tag="@string/type_number"
                android:text="3" />

            <Button
                style="@style/AppTheme.ActionBtn"
                android:tag="@string/type_operator"
                android:text="+" />

        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            style="@style/AppTheme.Row">


            <ImageButton
                android:id="@+id/clear_one"

                style="@style/AppTheme.ActionBtn"
                android:src="@drawable/baseline_undo_black_24dp"
                android:text="C" />

            <Button
                style="@style/AppTheme.NumBtn"
                android:tag="@string/type_number"
                android:text="0" />

            <Button
                style="@style/AppTheme.SpecialBtn"
                android:id="@+id/comma"
                android:text="." />

            <Button
                style="@style/AppTheme.SpecialBtn"
                android:id="@+id/equals"
                android:text="=" />

        </com.google.android.flexbox.FlexboxLayout>
    </com.google.android.flexbox.FlexboxLayout>
</androidx.constraintlayout.widget.ConstraintLayout>