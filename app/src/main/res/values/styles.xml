<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NumBtn" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textSize">32dp</item>
    </style>

    <style name="AppTheme.ActionBtn" parent="AppTheme.NumBtn">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.EqBtn" parent="AppTheme.NumBtn">
        <item name="android:textColor">@color/colorLighter</item>
        <item name="android:background">@drawable/round_button</item>
    </style>

    <style name="AppTheme.Row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="alignItems">stretch</item>
    </style>

</resources>
